
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model networkaccess.Areas.Admin.Models.ManageClaimsViewModel
<!DOCTYPE html>

<html>

<head>
    <link href="~/Areas/Admin/css/claimManagement.css" rel="stylesheet" />
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.2.1/js/buttons.html5.min.js"></script>
</head>
<body>

        <div class="m-b-md">
            <h3 class="m-b-none">Claim Management Access</h3>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li>
                        <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i> Home</a>
                    </li>
                    <li>
                        <a href="@Url.Action("ClaimManagement", "ClaimManagementAccess")"><i class="fa fa-rupee"></i> Claim Management</a>
                    </li>
                    <li class="active">Job Role Access</li>
                </ul>
            </div>
            <div class="col-lg-12" id="dvPageMessage">
                @Html.Partial("_PageMessage")
            </div>
        </div>

    <div class="bigBox">
        <div class="df" style="justify-content:space-between;">
            <div class="m-l-4 CMAlabel">Role Wise Access</div>
            <div class="excel_box" onclick="tableExport(1)">

                <img src="/Areas/Admin/images/excel_export.png" class="excel_export" id="rwaExport" />

            </div>
        </div>

        <table id="rWAListTable" class="table table-striped table-light m-l-4"
               style="width: 100%; color: black; font-size: 12px; margin-bottom: 0;">
            <thead>
                <tr>
                    <th>Sr No.</th>
                    <th>Job Code</th>
                    <th>Vehicle Type</th>
                    <th>Per Diem</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Last Updated On</th>
                    <th>Modified By</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
        <button type="button" class="btn btn-secondary btn-sm RWAadd" id="rwaAdd">Add</button>

    </div>
  



 <div class="modal" id="newRWA" tabindex="-1" role="dialog">
     <div class="modal-dialog modal-dialog-centered" role="document">
         <div class="modal-content">
             <div class="modal-header">
                 <h5 class="modal-title" id="exampleModalLongTitle">Add Role</h5>
                 <button type="button" class="close modalCloseBtn" onclick="closeRwaModal()" data-dismiss="modal" aria-label="Close">
                     <span aria-hidden="true">&times;</span>
                 </button>
             </div>
             <div class="modal-body">
                 <div class="df fc">
                     <div class="df rwaModalRow">
                         <div class="addRWALabel">
                             Job Code
                         </div>
                         <select class="chosen" id="addRoleId" multiple data-placeholder="Choose Role ID"></select>
                     </div>
                     <div class="df rwaModalRow">
                         <div class="addRWALabel">
                             Vehicle Type
                         </div>
                         <div>
                             <select id="addvehicleType" class="chosen" data-placeholder="Choose vehicle type"></select>

</div>
                     </div>

                     <div class="df rwaModalRow">
                         <div class="addRWALabel">
                             Per Diem
                         </div>
                         <div>
                             <input id="rwaPerdiem" class="inputPerdiemWidth" type="number" min="0" max="999" />

                         </div>
                     </div>

                     <div class="df rwaModalRow">
                         <div class="addRWALabel">
                             Start Date
                         </div>
                         <div>
                             <div class='input-group date' id='addStartDate'>
                                 <input type='text' class="form-control" data-format="dd-M-yyyy hh:mm:ss" />
                                 <span class="input-group-addon">
                                     <span class="glyphicon glyphicon-calendar"></span>
                                 </span>
                             </div>
                         </div>
                     </div>

                     <div class="df rwaModalRow">
                         <div class="addRWALabel">
                             End Date
                         </div>
                         <div>
                             <div class='input-group date' id='addEndDate'>
                                 <input type='text' class="form-control" data-format="dd-M-yyyy hh:mm:ss" />
                                 <span class="input-group-addon">
                                     <span class="glyphicon glyphicon-calendar"></span>
                                 </span>
                             </div>
                         </div>
                     </div>
                 </div>
             </div>
             <div class="modal-footer">
                 <button type="button" class="btn btn-secondary" onclick="closeRwaModal()" data-dismiss="modal">Close</button>
                 <button type="button" class="btn btn-primary" id="RWAaddRow" onclick="rwaAdd()">Submit</button>
             </div>
         </div>
     </div>
 </div>

    <script src="~/Areas/Admin/js/claims/claimManagement.js"></script>







</html>