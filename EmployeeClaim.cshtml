@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model networkaccess.Areas.Admin.Models.ManageClaimsViewModel
<!DOCTYPE html>

<html>

<head>
    <link href="~/Areas/Admin/css/claimManagement.css" rel="stylesheet" />
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.2.1/js/buttons.html5.min.js"></script>
</head>

<body>
    <div class="m-b-md">
        <h3 class="m-b-none">Employee Access</h3>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <ul class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i> Home</a>
                </li>
                <li>
                    <a href="@Url.Action("ClaimManagement", "ClaimManagementAccess")"><i class="fa fa-rupee" ></i> Claim Management</a>
                </li>
                <li class="active">Employee Access</li>
            </ul>
        </div>
        <div class="col-lg-12" id="dvPageMessage">
            @Html.Partial("_PageMessage")
        </div>
    </div>

    <div class="bigBox marginTop">
        <div class="df" style="justify-content:space-between;">
            <div class="m-l-4 CMAlabel">Employee Wise Access</div>
            <div class="excel_box" onclick="tableExport(2)">
                <img src=" /Areas/Admin/images/excel_export.png" class="excel_export" id="ewaExport" />
            </div>
        </div>
        <table id="ESAListTable" class="table table-striped table-light m-l-4"
               style="width: 100%; color: black; font-size: 12px; margin-bottom:0;">
            <thead>
                <tr>
                    <th>Sr No.</th>
                    <th>Employee ID</th>
                    <th>Job Code</th>
                    <th>Vehicle Type</th>
                    <th>Per Diem</th>
                    <th>Access</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Last Updated On</th>
                    <th>Modified By</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
        <button type="button" class="btn btn-secondary btn-sm ESAadd" id="esaAdd">Add</button>

    </div>
   
    <div class="modal" id="newESA" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Add Employee</h5>
                    <button type="button" class="close modalCloseBtn" onclick="closeEsaModal()" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="df fc">
                        <div class="df rwaModalRow">
                            <div class="addRWALabel">
                                Employee ID
                            </div>
                            <div>
                                <select class="chosen" id="addEmpIdEsa" multiple data-placeholder="Choose Employee ID"></select>

                            </div>
                        </div>
                        <div class="df rwaModalRow">
                            <div class="addRWALabel">
                                Vehicle Type
                            </div>
                            <div>
                                <select id="addvehicleTypeEsa" class="chosen" multiple data-placeholder="Choose vehicle type"></select>
                            </div>
                        </div>

                        <div class="df rwaModalRow">
                            <div class="addRWALabel">
                                Per diem
                            </div>
                            <div>
                                <input id="esaPerdiem" class="inputPerdiemWidth" type="number" min="0" max="999" />

                            </div>
                        </div>

                        <div class="df rwaModalRow">
                            <div class="addRWALabel">
                                Claim Access
                            </div>
                            <div class="accessRadio">
                                <div class="custom-control custom-radio custom-control-inline">
                                    <input type="radio" value="yes" name="addESAaccess"
                                           class="custom-control-input">
                                    <label class="custom-control-label" for="acesss">Yes</label>
                                </div>
                                <div class="custom-control custom-radio custom-control-inline">
                                    <input type="radio" value="no" name="addESAaccess"
                                           class="custom-control-input">
                                    <label class="custom-control-label" for="noAccess">No</label>
                                </div>
                            </div>
                        </div>
                        <div class="df rwaModalRow">
                            <div class="addRWALabel">
                                Start Date
                            </div>
                            <div>
                                <div class='input-group date' id='addStartDateEsa'>
                                    <input type='text' class="form-control" data-format="dd-MMM-yyyy hh:mm:ss" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="df rwaModalRow">
                            <div class="addRWALabel">
                                End Date
                            </div>
                            <div>
                                <div class='input-group date' id='addEndDateEsa'>
                                    <input type='text' class="form-control" data-format="dd-MMM-yyyy hh:mm:ss" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary closeESAModal" onclick="closeEsaModal()" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="ESAaddRow" onclick="ESAaddRow()">Submit</button>
                </div>
            </div>
        </div>
    </div>


    <script src="~/Areas/Admin/js/claims/claimManagement.js"></script>
</body>

</html>
