@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model networkaccess.Areas.Admin.Models.ManageClaimsViewModel
<!DOCTYPE html>

<html>

<head>
    <link href="~/Areas/Admin/css/claimManagement.css" rel="stylesheet" />
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.2.1/js/buttons.html5.min.js"></script>
</head>

<body>
    <div class="m-b-md">
        <h3 class="m-b-none">Rate Card</h3>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <ul class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i> Home</a>
                </li>
                <li>
                    <a href="@Url.Action("ClaimManagement", "ClaimManagementAccess")"><i class="fa fa-rupee"></i> Claim Management</a>
                </li>
                <li class="active">Rate Card</li>
            </ul>
        </div>
        <div class="col-lg-12" id="dvPageMessage">
            @Html.Partial("_PageMessage")
        </div>
    </div>

    <div class="rowMargin smallBox">
        <div class="m-l-4 CMAlabel">Rate Card</div>

        <table id="rateCardTable" class="table table-striped table-light m-l-4"
               style="color: black; font-size: 12px; width: 700px;">
            <thead>
                <tr>
                    <th>Sr No.</th>
                    <th>Vehicle Type</th>
                    <th>Per km Rate</th>
                    <th>Last Updated On</th>
                    <th>Modified By</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
        <button type="button" class="btn btn-secondary btn-sm rateAdd" id="rateAdd">Add</button>

    </div>


    <div class="modal" id="newRate" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Add Vehicle Type</h5>
                    <button type="button" class="close modalCloseBtn" onclick="closeRateModal()" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="df fc">
                        <div class="df rwaModalRow">
                            <div class="addRWALabel">
                                Vehicle Type
                            </div>
                            <div>
                                <input id="newVehicleType" />

                            </div>
                        </div>

                        <div class="df rwaModalRow">
                            <div class="addRWALabel">
                                Per km Rate
                            </div>
                            <div>
                                <input id="perKmRate" type="number" min="0" max="999" />

                            </div>
                        </div>


                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="closeRateModal()" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="RateaddRow" onclick="rateaddRow()">Submit</button>
                </div>
            </div>
        </div>
    </div>



    <script src="~/Areas/Admin/js/claims/claimManagement.js"></script>
</body>

</html>
