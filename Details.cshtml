@model na.Models.Admin.UserDetails
@{
    ViewBag.Title = "View User Details";
}
<div class="m-b-md">
    <h3 class="m-b-none">User Details</h3>
</div>
<div class="row">
    <div class="col-lg-12">
        <ul class="breadcrumb">
            <li>
                <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i> Home</a>
            </li>
            <li>
                <a href="@Url.Action("Index")"><i class="i i-users2"></i> Users</a>
            </li>
            <li class="active">Details</li>
        </ul>
    </div>
    <div class="col-lg-12" id="dvPageMessage">
        @Html.Partial("_PageMessage")
    </div>
</div>
@if(Model!=null)
{ 
<section class="panel panel-default">
    <div class="panel-body">
        @using (Html.BeginForm("Details", "User", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label class="col-lg-2 control-label" for="input-id-1">Name:</label>
                <div class="col-lg-10">
                    <p class="form-control-static">@Html.DisplayFor(model => model.fullname)</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">Username:</label>
                <div class="col-lg-10">
                    <p class="form-control-static">@Html.DisplayFor(model => model.username)</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">Email:</label>
                <div class="col-lg-10">
                    <p class="form-control-static">@Html.DisplayFor(model => model.email_id)</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">Role Name:</label>
                <div class="col-lg-10">
                    <p class="form-control-static">@Html.DisplayFor(model => model.user_role_name)</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">Reporting Manager Username:</label>
                <div class="col-lg-10">
                    <p class="form-control-static">@Html.DisplayFor(model => model.reporting_manager_name)</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">Phone:</label>
                <div class="col-lg-10">
                    <p class="form-control-static">@Html.DisplayFor(model => model.phone)</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">Is Active?</label>
                <div class="col-lg-10">
                    <p class="form-control-static">@Html.DisplayFor(model => model.is_active)</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">Created On Date:</label>
                <div class="col-lg-10">
                    <p class="form-control-static">@Html.DisplayFor(model => model.created_on)</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">Last Modified on Date:</label>
                <div class="col-lg-10">
                    <p class="form-control-static">@Html.DisplayFor(model => model.modified_on)</p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-2">
                   <a href="@Url.Action("Edit")/@Model.userid" title="Click here to Edit User Details" class="btn btn-default"><i class="fa fa-pencil"></i> Edit</a>
                    <a href="@Url.Action("Index")" class="btn btn-default" title="Go Back"><i class="i i-back"></i> </a>
                </div>
            </div>
        }
    </div>
</section>
}
else
{
    <a href="@Url.Action("Index")" class="btn btn-default" title="Go Back"><i class="i i-back"></i> </a>
}